@model EmployeeManagement.ViewModels.EmployeeViewModel
@{ 
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Page";    
}
<body>
    <h1>@Model.PageTitle</h1>
   

    <div class="card-deck">

        @foreach (var emp in Model.employee)
        {

            var photoPath = "~/Img/" + (emp.PhotoPath ?? "Doremon.jpg");
        <div class="card m-3" style="min-width:18rem; max-width:30.3%;">

            <div class="card-header">
                <h3>@emp.EmployeeName</h3>
                <h3>@emp.Address</h3>
                <h3> @emp.Email</h3>
            </div>
            <img class="card-img-top imageThumbnail" src="@photoPath" asp-append-version="true" />
            <div class="card-footer text-center">
                @*<a href="#" class="btn btn-primary">View</a>*@
                @*<a href="#" class="btn btn-primary">Edit</a>*@
                <a asp-controller="home" asp-action="edit" asp-route-id="@emp.Id" class="btn btn-primary m-1">Edit</a>
                <a href="#" class="btn btn-danger">Delete</a>
            </div>
        </div>
        }
    </div>
</body>


